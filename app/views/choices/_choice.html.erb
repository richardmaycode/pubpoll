<%= turbo_frame_tag dom_id(choice) do %>
  <%= content_tag :h3, choice.title %>
  <%= content_tag :div, class: "choice-url" do %>
    URL: <%= link_to choice.url, choice.url %>
  <% end unless choice.url.blank? %>
  <%= content_tag :p, class: "choice-content" do %>
    <%= choice.content %>
  <% end unless choice.content.blank? %>
  <%= link_to "edit", edit_poll_choice_path(choice.poll, choice) %>
  <%= link_to "delete", poll_choice_path(choice.poll, choice), method: :delete, data: { confirm: "Are you sure you want to delete this choice?" } %>
<% end %>