<%= content_tag :div, class: "nested-form-wrapper", data: { "new-record": f.object.new_record? } do %>
  <fieldset>
    <legend>Choice</legend>
    <%= f.hidden_field :_destroy %>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
    <br>
    <%= f.label :url, "URL" %><br>
    <%= f.text_field :url %>
    <br>
    <%= f.label :content, "Details" %><br>
    <%= f.text_area :content %>  
    <br>
    <%= button_tag "Delete", type: "button", data: { action: "nested-form#remove" } %>
  </fieldset>

<% end %>