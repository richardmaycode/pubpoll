<h1>Poll: <%= @poll.title %></h1>
<h2>Details</h2>
<p>
<%= @poll.content %>
</p>
<h2>Choices</h2>
<ul id="choices" data-controller="">
  <%= render @poll.choices %>
</ul>
<details>
  <summary>
    <%= button_tag "Add Choice" %>
  </summary>
  <%= turbo_frame_tag "new_choice", src: new_poll_choice_path(@poll), target: "_top" %>
</details>

<h2>Settings</h2>

<%= render(CheckboxFormComponent.new(object: @poll, field: :allow_recommendations, label: "Allow Recommendations")) %>
<%= render(CheckboxFormComponent.new(object: @poll, field: :allow_sharing, label: "Allow Sharing")) %>
<%= render(CheckboxFormComponent.new(object: @poll, field: :discoverable, label: "Discoverable")) %>
<%= render(CheckboxFormComponent.new(object: @poll, field: :published, label: "Published")) %>

<%= render(ShareCardComponent.new(poll: @poll, title: "Share your Poll!", subtitle: "Anyone with this link will be able to vote on your poll.", button_text: "Copy to Clipboard")) %>