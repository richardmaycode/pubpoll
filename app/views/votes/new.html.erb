<%= turbo_frame_tag "new_vote" do %>
  <%= form_with(model: [@poll, @vote]) do |f| %>
    <%= f.collection_radio_buttons :choice_id, @poll.choices, :id, :title %>
    <% if @poll.allow_comments? %>
      <%= f.label :content, "Comments" %>
      <%= f.rich_text_area :content %>
    <% end %>
    <%= f.submit %>
  <% end %>
<% end %>