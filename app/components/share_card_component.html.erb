
<%= content_tag :div, data: { controller: "clipboard" } do %>
  <%= content_tag :h3, @title %>
  <%= content_tag :p, @subtitle unless @subtitle.blank? %>
  <%= text_field_tag :url, poll_url(@poll), data: { "clipboard-target": "source" } %>
  <%= button_tag @button_text, data: { action: "clipboard#copy"} %>
<% end %>